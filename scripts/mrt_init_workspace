#!/bin/bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

if [ -z "$LD_LIBRARY_PATH" ] || ! [[ $LD_LIBRARY_PATH =~ .*\/opt\/ros\/[^\/]+\/lib.* ]]; then
	echo "ROS not set. Maybe forgotten to source /opt/ros/<dist>/setup.bash file."
	exit 1
fi

mkdir src
catkin init
cd src
wstool init
cd ..
$DIR/mrt_catkin build

